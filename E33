  <script>
    // Theme Management
    function changeTheme(theme) {
      document.documentElement.setAttribute("data-theme", theme);
      localStorage.setItem("theme", theme);
    }

    const savedTheme = localStorage.getItem("theme") || "dark";
    document.documentElement.setAttribute("data-theme", savedTheme);

    // Enhanced Carousel with Auto-scroll
    const carousel = document.getElementById("product-carousel");
    const prevBtn = document.getElementById("prev-btn");
    const nextBtn = document.getElementById("next-btn");
    const cardWidth = 288; // Card width (256) + gap (32)

    let scrollPosition = 0;
    let autoScroll;

    function startAutoScroll() {
      autoScroll = setInterval(() => {
        if (scrollPosition >= carousel.scrollWidth - carousel.offsetWidth) {
          scrollPosition = 0;
        } else {
          scrollPosition += cardWidth;
        }
        carousel.scrollTo({ left: scrollPosition, behavior: "smooth" });
      }, 3000);
    }

    nextBtn.addEventListener("click", () => {
      clearInterval(autoScroll);
      if (scrollPosition < carousel.scrollWidth - carousel.offsetWidth) {
        scrollPosition += cardWidth;
        carousel.scrollTo({ left: scrollPosition, behavior: "smooth" });
      }
      startAutoScroll();
    });

    prevBtn.addEventListener("click", () => {
      clearInterval(autoScroll);
      if (scrollPosition > 0) {
        scrollPosition -= cardWidth;
        carousel.scrollTo({ left: scrollPosition, behavior: "smooth" });
      }
      startAutoScroll();
    });

    carousel.addEventListener("mouseover", () => clearInterval(autoScroll));
    carousel.addEventListener("mouseout", startAutoScroll);

    // Start auto-scrolling
    startAutoScroll();

    // Adjust carousel layout on resize
    window.addEventListener('resize', () => {
      scrollPosition = 0;
      carousel.scrollTo({ left: 0, behavior: "smooth" });
    });
  </script>
